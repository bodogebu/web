@import './component/msgBox'

.tile
	position relative
	img
		width 100%
		vertical-align middle
	.tile_text_container
		width 100%
		height 32px
		margin-bottom -16px
		position absolute
		bottom 50%
		font-size 1.2rem
		font-weight bold
		text-align center
	.tile_text
		padding 8px 4px 4px
		background-color rgba(255, 255, 255, 0.5)
		border-radius 4px
	.msg_box_placeholder
		width 100%
		height 100%
		position fixed
		top 0
		left 0
		z-index 10